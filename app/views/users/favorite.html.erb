<div class = "header-container">  
  <%= render "layouts/header_link" %>
  <%= render "books/search_box" %>
</div>

<h2>お気に入り</h2>
<br>

<div class = "content-wrapper"> 
  <h3>シリーズ一覧</h3>
  <div class = "container-fluid" >
    <div class = "row">
      <%= render "favorite_series", book: @favored_book %>
    </div>
  </div>

<h3>作家一覧</h3>
  <div class = "container-fluid" >
    <div class = "row">
      <%= render partial: "favorite_author", collection: @favored_authors, as: "book" %>
    </div>
  </div>
</div>