<div class="col-4 col-md-3 col-lg-2 mb-4">
  <div class = "card border-dark mb-3">
    <div class = "mx-auto card-header p-0 border-bottom" style= "height: 200px;" >
        <%= link_to_if(book.large_image_url.present?, image_tag(book.large_image_url), book.item_url) %>
    </div>
    <div class="card-body text-dark book-body bg-primary" style= "height: 290px">
      <p><%= book.title %></p>
      <p><%= book.author %></p>
      <p><%= book.sales_date %>発売</p>
      <p><%= book.item_price %>円(税込み)</p>
    </div>
  </div>
</div>