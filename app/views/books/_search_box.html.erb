<div class="search-box" style = "" >  
  <div class = "d-flex justify-content-center input-group my-3" >
    <%= form_with model:@book, url: search_books_path, method: :get, local: true do |f| %>
      <div class = "input-group-append" >
        <%= f.text_field :book, name: "keyword", placeholder: "作品名か作者名を入力してください", style: "width: 300px; border-width: 1px; border-color: #626262; padding: 2rem 1rem; border-top-left-radius: 0.25rem; border-bottom-left-radius: 0.25rem; height: 1rem; border-right: 0;" %>
        <%= f.collection_select :booksgenreid, Genre.all, :booksgenreid, :genre, {selected: "Genre.first"}, {class: " pl-2 pr-4", style: "border-width: 1px; border-color: #626262;"} %>
        <%= f.submit "検索",class: "text-white rounded-right", style: "border-width: 1px; border-color: #626262; background-color: #626262; padding:0 3rem;" %>
      </div>
    <% end %>
  </div>
</div>