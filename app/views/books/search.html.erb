<h1>New books information</h1>
<div class = "content">
  <%= render "search_box", books: @books, genres: @genres %>
  <div id = "book_list">    
    <% if @author_books.present? %>
      <% @author_books.each do |book| %>
        <div class="list_books_author">
          <%= link_to_if(book.medium_image_url.present?, image_tag(book.medium_image_url, style: "width: 70px;height: 100px;display: inline-block;"), book.item_url) %>
          <%= link_to book.title, book.item_url %>
          <%= book.author %>

          <%# <span id="book-<%= book.isbn"> %>
            <% author = Author.registered(book) %>
            <%# <% author_favorite = AuthorFavorite.favored(author, current_user) %> %>
            <% if AuthorFavorite.favored_by?(author, current_user) %>
                <%= render "favorite", {author: author}%>
            <% else %> 
                <%= render "not_favorite", {author: author, book: book} %>
            <% end %>
          <%# </span> %>
            <%= book.item_price %>円(税込み)
        </div>
      <% end %>
    <% end %>

    <% if @title_books.present? %>
      <% @title_books.each do |book| %>
        <div class="list_books_title">
          <%= link_to_if(book.medium_image_url.present?, image_tag(book.medium_image_url, style: "width: 70px;height: 100px;display: inline-block;"), book.item_url) %>
          <%= link_to book.title, book.item_url %>
          <%= book.author %>

          <%# <span id="book-<%= book.isbn"> %>
            <% author = Author.registered(book) %>
            <% if AuthorFavorite.favored_by?(author, current_user) %>
                <%= render "favorite", {author: author}%>
            <% else %> 
                <%= render "not_favorite", {author: author, book: book} %>
            <% end %>
          <%# </span> %>
            <%= book.item_price %>円(税込み)
        </div>
      <% end %>
    <% end %>
  </div>
</div>