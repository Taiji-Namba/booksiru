<%= form_with model: author do |f| %>
  <%= f.hidden_field :author_name, value: book.author %>
  <%= f.fields_for :author_favorites do |a| %>
    <%= a.hidden_field_tag :user_id, value: current_user.id %>
    <%= a.hidden_field_tag :author_id, value: author.id %>
  <% end %>
  <%= f.submit "☆" %>
<% end %>

